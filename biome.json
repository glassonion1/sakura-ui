{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": false
  },
  "javascript": {
    "jsxRuntime": "reactClassic"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off"
      },
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "error",
        "useHookAtTopLevel": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      }
    },
    "ignore": [
      "*.d.ts",
      "dist/**/*",
      "node_modules/**/*",
      "build/**/*",
      "public/**/*",
      "bundle/**/*",
      "out/**/*",
      "generated/**/*",
      "tests/**/*",
      "coverage/**/*",
      ".cache/**/*"
    ]
  }
}
